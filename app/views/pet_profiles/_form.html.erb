<%= form_with model: pet do |f| %>
  <div class="border border-orange-700" >
    <%= f.label :name, style: "display: block" %>
    <%= f.text_field :name %>
  </div>

  <div class="border border-orange-700" >
    <%= f.label :animal, style: "display: block" %>
    <%= f.text_field :animal %>
  </div>

  <div class="border border-orange-700">
    <%= f.label :dob, style: "display: block" %>
    <%= f.date_field :dob %>
  </div>

  <div class="border border-orange-700">
    <%= f.label :gender, style: "display: block" %>
    <%= f.text_field :gender %>
  </div>

  <%= f.submit "Update" %>
<% end %>
