<section>
  <h1 class="font-bold text-4xl">Supplies</h1>
  <div data-controller="presentation">
    <div class="mb-2">
      <!-- TODO: how do i make chiclets without making crud actions -->
      <input name="filter" type="text" class="border-2 border-amber-600" data-presentation-target="filter">
      <button data-action="click->presentation#filter" data-filter-value="pet-supply-card">filter by...</button>
      <button data-action="click->presentation#clearAllFilters">clear all filters</button>
    </div>
    <% @supplies.each do |pet_name, pet_supplies| %>
      <div id="<%= pet_name %>" class="pet-supply-card border-2 border-orange-700 mb-2 p-1" data-presentation-target="card">
        <h3 class="font-semibold" data-filter-test="wtf"><%= pet_name %>'s Supplies!</h3>
        <% pet_supplies[:supplies].each do |supply| %>
          <div class="mb-1 ps-1 border border-amber-300">
            <div><span class="font-semibold">Name</span> <%= supply.name %></div>
            <div><span class="font-semibold">Brand</span> <%= supply.brand %></div>
            <div><span class="font-semibold">Inventory</span> <%= supply.inventory_count %></div>
          </div>
          <% end %>
      </div>
    <% end %>
  </div>
</section>
