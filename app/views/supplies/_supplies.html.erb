<div id="<%= pet_name %>" class="pet-supply-card border-2 border-orange-700 mb-2 p-1" data-presentation-target="card">
  <h3 class="font-semibold" data-filter-test="wtf"><%= pet_name %>'s Supplies!</h3>
  <%= link_to "Add Supply for #{pet_name}", new_pet_profile_supply_path(pet_supplies[:pet_profile_id]) %>
  <% pet_supplies[:supplies].each do |supply| %>
    <div class="mb-1 ps-1 border border-amber-300">
      <div><span class="font-semibold">Name</span> <%= supply.name %></div>
      <div><span class="font-semibold">Brand</span> <%= supply.brand %></div>
      <div><span class="font-semibold">Inventory</span> <%= supply.inventory_count %></div>
      <div><span class="font-semibold">Supply Type</span> <%= supply.supply_type %></div>
      <div class="p-1">
        <%= link_to "Edit", edit_supply_path(supply), class: "p-1 border border-blue-700" %>
        <button class="p-1 border border-blue-700">Mark Complete</button>
        <%= button_to "Delete", supply, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "p-1 border border-blue-700" %>
      </div>
    </div>
  <% end %>
</div>
